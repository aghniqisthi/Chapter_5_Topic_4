<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:theme="@style/themesecond"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <com.google.android.material.textfield.TextInputEditText-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->

<!--        </com.google.android.material.textfield.TextInputEditText>-->
        <TextView
            style="@style/title"
            android:id="@+id/txt_sapaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_sapaan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="@style/button"
            android:id="@+id/btn_idn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lang_idn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_sapaan" />

        <Button
            style="@style/button"
            android:id="@+id/btn_eng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lang_eng"
            app:layout_constraintTop_toBottomOf="@+id/btn_idn" />

        <Button
            android:id="@+id/btn_kor"
            android:text="@string/lang_kor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_eng" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>